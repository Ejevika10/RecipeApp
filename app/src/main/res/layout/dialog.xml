<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@drawable/bg_rounded_corner"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Money"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            />
        <RadioGroup
            android:id="@+id/money"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/moneyUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                />

            <RadioButton
                android:id="@+id/moneyDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Down"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Complexity"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:layout_gravity="center_horizontal"
            />
        <RadioGroup
            android:id="@+id/diff"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/diffEasy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Easy"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                />

            <RadioButton
                android:id="@+id/diffMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Medium"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/diffHard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hard"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"/>
            <RadioButton
                android:id="@+id/diffAll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:padding="10dp"
            android:textColor="#000000"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"
           />
        <RadioGroup
            android:id="@+id/rating"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_width="250dp"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/ratingUp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Up"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"
                />

            <RadioButton
                android:id="@+id/ratingDown"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Down"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_weight="1"/>
        </RadioGroup>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
    <Button
        android:id="@+id/applyBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Apply"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:backgroundTint="#FF9800"
        />
    <Button
        android:id="@+id/cancelBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:textSize="20sp"
        android:textColor="#000000"
        android:layout_margin="10dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1"
        android:backgroundTint="#FF9800"
        />
    </LinearLayout>

</LinearLayout>